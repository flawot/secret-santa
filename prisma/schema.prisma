generator client {
  provider     = "prisma-client"
  output       = "generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id       Int     @id @default(autoincrement())
  telegram BigInt  @unique
  name     String
  list     String?

  @@map("members")
}

model Connection {
  id Int @id @default(autoincrement())

  giverId     BigInt @map("giver_id")
  recipientId BigInt @map("recipient_id")

  @@map("connections")
}
