generator client {
  provider     = "prisma-client"
  output       = "generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id       Int    @id @default(autoincrement())
  telegram Int    @unique
  name     String

  @@map("members")
}

model Connection {
  id Int @id @default(autoincrement())

  giverId     Int @map("giver_id")
  recipientId Int @map("recipient_id")

  @@map("connections")
}
